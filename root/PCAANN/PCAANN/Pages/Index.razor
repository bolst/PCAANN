@page "/"
@using PCAANN.Api

@if (ConnectionEstablished)
{
    <Row>
        <Column ColumnSize="ColumnSize.Is2">
            <Heading>PCA-ANN</Heading>
        </Column>
        <Column ColumnSize="ColumnSize.Is8"></Column>
        <Column ColumnSize="ColumnSize.Is2">
            <Blazorise.Link To="doc" Target="Target.Blank">Documentation</Blazorise.Link>
        </Column>
    </Row>

    <Divider />

    <Grid>
        <Column ColumnSize="ColumnSize.Is1"></Column>

        <Column ColumnSize="ColumnSize.Is1" TextAlignment="TextAlignment.Center">
            <FlowChart />
        </Column>

        <Column ColumnSize="ColumnSize.Is1"></Column>

        <Column ColumnSize="ColumnSize.Is8">
            <RunOptions.Options />
        </Column>

        <Column ColumnSize="ColumnSize.Is1"></Column>

    </Grid>
}
else
{
    <Row Position="Position.Relative.Top.Is50.Translate.MiddleY">
        <Column ColumnSize="ColumnSize.Is4"></Column>

        <Column ColumnSize="ColumnSize.Is4" TextAlignment="TextAlignment.Center">
            <Row>
                <Column ColumnSize="ColumnSize.Is4"></Column>
                <Column ColumnSize="ColumnSize.Is4" TextAlignment="TextAlignment.Center">
                    <Heading>Loading...</Heading>
                </Column>
                <Column ColumnSize="ColumnSize.Is1" TextAlignment="TextAlignment.Center">
                    <Tooltip Text="@ToolContent" Position="Position.Relative.Top.Is50.Translate.MiddleY">
                        <Icon Name="IconName.ExclamationCircle" IconSize="IconSize.Large" />
                    </Tooltip>
                </Column>
            </Row>
            <Row>
                <Progress Value="100" Width="Width.Is100" Animated Striped />
            </Row>
        </Column>

        <Column ColumnSize="ColumnSize.Is4"></Column>
    </Row>
}